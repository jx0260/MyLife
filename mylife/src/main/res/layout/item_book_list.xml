<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/item_booklist_img"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/item_booklist_chinese_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/item_booklist_img"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="王阳明心学"
        android:textSize="22sp"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/item_booklist_author"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/item_booklist_img"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/item_booklist_chinese_name"
        android:paddingLeft="120dp"
        android:text="王觉仁"
        android:textSize="18sp"
        android:gravity="top"/>

</RelativeLayout>